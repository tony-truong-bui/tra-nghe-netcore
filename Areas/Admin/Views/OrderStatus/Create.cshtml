@model TraNgheCore.Models.OrderStatusModel
@{
    ViewBag.Title = "Create";
    Layout = "_Layout";
    var orderStatuses = ViewBag.OrderStatuses as List<TraNgheCore.Models.OrderStatusModel>;
}

<h2>Order Status</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @* <div class="form-group"> *@
        @*     @Html.LabelFor(m => m.Id, htmlAttributes: new { @class = "control-label col-md-2" }) *@
        @*     <div class="col-md-10"> *@
        @*         @Html.TextBoxFor(m => m.Id, new { @class = "form-control" }) *@
        @*         @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" }) *@
        @*     </div> *@
        @* </div> *@
        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}


@if (orderStatuses != null && orderStatuses.Any())
{
    <h3>Existing Order Statuses</h3>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in orderStatuses)
            {
                <tr class="status-row-@status.Id">
                    <td>@status.Id</td>
                    <td>
                        <input type="text" id="name-input-@status.Id" class="form-control"
                               value="@status.Name" />
                    </td>
                    <td>
                        <button class="btn btn-success btn-sm update-order-status"
                                data-id="@status.Id"
                                type="button">
                            Update
                        </button>
                        |
                        <button class="btn btn-danger btn-sm delete-order-status"
                                data-id="@status.Id"
                                type="button">
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}


@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('.delete-order-status').click(function () {
                var id = $(this).data('id');
                if (confirm('Are you sure you want to delete this order status?')) {
                    $.ajax({
                        url: '@Url.Action("AjaxDelete", "OrderStatus")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                $('#status-row-' + id).fadeOut(300, function () { $(this).remove(); });
                            } else {
                                alert(response.message || 'Delete failed.');
                            }
                        },
                        error: function () {
                            alert('Error deleting order status.');
                        }
                    });
                }
            });
        });

    </script>

    <script>
        $(function () {
            $('.update-order-status').click(function () {
                var id = $(this).data('id');
                
                var name = $('#name-input-' + id).val();
                if (name.trim() === "") {
                    alert("Status name cannot be empty.");
                    return;
                }

                
                $.ajax({
                    url: '@Url.Action("AjaxUpdate", "OrderStatus")',
                    type: 'POST',
                    data: { id: id, name: name },
                    success: function (response) {
                        if (response.success) {
                            alert('Category updated successfully.');
                        } else {
                            alert(response.message || 'Update failed.');
                        }
                    },
                    error: function () {
                        alert('Error updating order status.');
                    }
                });
                
            });

        });
    </script>
}
