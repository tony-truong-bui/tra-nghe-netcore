
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TraNgheCore</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TraNgheCore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MyStyle.css" />    
</head>
<body class="custom-bg text-light">
    <header class="">
        <nav class="navbar rounded navbar-expand-sm navbar-toggleable-sm nav-light border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))   
                {
                @* <a class="navbar-brand" asp-area="" asp-controller="Dashboard" asp-action="Index" style="font-weight: bold;">TraNgheCore</a> *@
                    @Html.ActionLink("TraNgheCore", "Index", "Dashboard", new { area = "Admin" }, new { @class = "navbar-brand text-white", style = "font-weight: bold;" })
                } else if (User.Identity.IsAuthenticated && User.IsInRole("User")) {
                    @Html.ActionLink("TraNgheCore", "Index", "Dashboard", new { area = "User" }, new { @class = "navbar-brand text-white", style = "font-weight: bold;" })
                } 
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse  justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                        @* </li> *@
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                        @* </li> *@


                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Dashboard", "Index", "Dashboard", new { area = "Admin" }, new { @class = "nav-link text-white" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Product", "Create", "Product", new { area = "Admin" }, new { @class = "nav-link" })
                            </li>

                            <li class="nav-item" >
                                @Html.ActionLink("Category", "Create", "Category", new { area = "Admin" }, new { @class = "nav-link" })
                            </li>

                            <li class="nav-item">
                                @Html.ActionLink("Table", "Create", "Table", new { area = "Admin" }, new { @class = "nav-link" })
                            </li>

                            <li class="nav-item">
                                @Html.ActionLink("User", "Create", "User", new { area = "Admin" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Type of Order", "Create", "TypeOfOrder", new { area = "Admin" }, new { @class = "nav-link" })
                            </li>
                        } else if (User.IsInRole("User")) {
                            <li class="nav-item">
                                @Html.ActionLink("Order", "Create", "Order", new { area = "User" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("OrderList", "Index", "OrderList", new { area = "User" }, new { @class = "nav-link" })                             
                            </li>
                        }

                    </ul>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="nav-item">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link" style="display:block; position:fixed;right:15px; top:15px;font-weight:bold; padding:0; border:none; background:none;">
                                        Log Out
                                    </button>
                                </form>
                            </div>
                        }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light">
        <div class="container">
            @* &copy; 2025 - TraNgheCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
